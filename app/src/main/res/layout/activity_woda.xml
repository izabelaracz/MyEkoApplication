<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Woda">

    <TextView
        android:id="@+id/textViewWoda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/montserrat"
        android:text="Notka dlaczego woda jest waÅ¼na i co znajdziemy w tej sekcji"
        android:textSize="18dp"
        android:textStyle="bold"
        android:gravity="center"/>


    <Button
        android:id="@+id/buttonCiekawostka"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:fontFamily="@font/montserrat"
        android:text="Ciekawostka"
        android:textAllCaps="true"
        android:textSize="19dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonLicznik"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:fontFamily="@font/montserrat"
        android:text="Licznik filtra"
        android:textAllCaps="true"
        android:textSize="19dp"
        android:textStyle="bold" />
