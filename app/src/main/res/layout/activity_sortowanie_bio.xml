<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SortowanieBio">

    <TextView
        android:id="@+id/tvBioTytul"
        android:textColor="@android:color/holo_green_dark"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="60dp"
        android:layout_width="400dp"
        android:textSize="40dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="30dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Bio"/>

    <TextView
        android:id="@+id/tvBioIn"
        android:textColor="@android:color/holo_green_dark"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="180dp"
        android:layout_width="400dp"
        android:textSize="23dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="30dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:text="Wrzucamy:"/>

    <TextView
        android:id="@+id/bio"
        android:fontFamily="@font/montserrat"
        android:layout_below="@id/tvBioIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="18dp"
        android:text="Odpady warzywne i owocowe\ngałęzie, trawę, liście i kwiaty\nresztki jedzenia\ntrociny, korę drzew"/>

    <TextView
        android:id="@+id/tvBioOut"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/bio"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/montserrat"
        android:text="Nie wrzucamy:"
        android:textAlignment="center"
        android:textColor="#CD0A11"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/bio1"
        android:fontFamily="@font/montserrat"
        android:layout_below="@id/tvBioOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="18dp"
        android:text="ziemi i kamieni\npopiołu z węgla drzewnego\nimpregnowanego drewna\nkości i odchodów zwierząt\nolejów jadalnych\npłyt wiórowych i pilśniowych"/>
</RelativeLayout>