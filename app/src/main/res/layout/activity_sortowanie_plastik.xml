<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SortowaniePlastik">

    <TextView
        android:id="@+id/tvPlastikTytul"
        android:textColor="@android:color/holo_green_dark"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="60dp"
        android:layout_width="400dp"
        android:textSize="40dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="30dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Metale i tworzywa sztuczne"/>

    <TextView
        android:id="@+id/tvPlastikIn"
        android:textColor="@android:color/holo_green_dark"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="180dp"
        android:layout_width="400dp"
        android:textSize="23dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="30dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:text="Wrzucamy:"/>

    <TextView
        android:id="@+id/plastik"
        android:fontFamily="@font/montserrat"
        android:layout_below="@id/tvPlastikIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="18dp"
        android:text="plastikowe butelki\nnakrętki, kapsle, zakrętki od słoików i butelek\nplastikowe opakowania, torebki i worki foliowe\npuszki po konserwach\naluminiowe puszki po napojach\nkartony po mleku i sokach"/>

    <TextView
        android:id="@+id/tvPlastikOut"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/plastik"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/montserrat"
        android:text="Nie wrzucamy:"
        android:textAlignment="center"
        android:textColor="#CD0A11"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/plastik1"
        android:fontFamily="@font/montserrat"
        android:layout_below="@id/tvPlastikOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="18dp"
        android:text="opakowań po lekach\nzużytych baterii i akumulatorów\nopakowań po farbach, lakierach i olejach\nplastikowych zabawek\nczęści samochodowych\nzużytego sprzętu elektronicznego i AGD"/>
</RelativeLayout>