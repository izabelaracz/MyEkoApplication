<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvSzkloTytul"
        android:textColor="@android:color/holo_green_dark"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="60dp"
        android:layout_width="400dp"
        android:textSize="40dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="30dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Szkło"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tvSzkloIn"
        android:textColor="@android:color/holo_green_dark"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="180dp"
        android:layout_width="400dp"
        android:textSize="23dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="30dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:text="Wrzucamy:"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/szklo"
        android:fontFamily="@font/montserrat"
        android:layout_below="@id/tvSzkloIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="18dp"
        android:text="słoiki i butelki po żywności i napojach\nszklane opakowania po kosmetykach"/>

    <TextView
        android:id="@+id/tvSzkloOut"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/szklo"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/montserrat"
        android:text="Nie wrzucamy:"
        android:textAlignment="center"
        android:textColor="#CD0A11"
        android:textSize="23dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/szklo1"
        android:fontFamily="@font/montserrat"
        android:layout_below="@id/tvSzkloOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="18dp"
        android:text="ceramiki\ndoniczek\nporcelany\nszkła okularowego, żaroodpornego i hartowanego\nzniczy z zawartością wosku\nżarówek, świetlówek i reflektorów\nszklanych opakowań po lekach, rozpuszczalnikach i olejach silnikowych\luster i szyb okiennych"
        android:layout_marginHorizontal="30dp"/>
    </RelativeLayout>
</ScrollView>