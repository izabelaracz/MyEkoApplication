<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizWorking">

    <TextView
        android:id="@+id/question_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"
        android:fontFamily="@font/montserrat"
        android:text="PYTANIE 1 z x"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/question_text"
        android:textAlignment="center"
        android:text="tekst_pytania tekst_pytania tekst_pytania tekst_pytania tekst_pytania tekst_pytania tekst_pytania tekst_pytania "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/question_count"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_text"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="23dp">

        <RadioButton
            android:id="@+id/radio_button1"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Odpowiedz 1" />

        <RadioButton
            android:id="@+id/radio_button2"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Odpowiedz 2" />

    </RadioGroup>

    <TextView
        android:id="@+id/answer_description"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="opis_odpowiedzi opis_odpowiedzi opis_odpowiedzi opis_odpowiedzi opis_odpowiedzi opis_odpowiedzi opis_odpowiedzi"
        android:layout_below="@+id/radio_group"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/button_confirm_next"
        android:layout_width="260dp"
        android:layout_height="80dp"
        android:textSize="19dp"
        android:text="NastÄ™pne pytanie"
        android:layout_below="@+id/answer_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"/>

</RelativeLayout>
</ScrollView>