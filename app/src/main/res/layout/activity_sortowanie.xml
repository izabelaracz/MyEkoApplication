<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/buttonPlastik"
        android:layout_width="380dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/segregacja_plastik"
        />

    <ImageButton
        android:id="@+id/buttonPapier"
        android:layout_width="380dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/buttonPlastik"
        android:background="@drawable/segregacja_papier"
        />

    <ImageButton
        android:id="@+id/buttonSzklo"
        android:layout_width="380dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/buttonPapier"
        android:background="@drawable/segregacja_szklo"
        />
    <ImageButton
        android:id="@+id/buttonBio"
        android:layout_width="380dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/buttonSzklo"
        android:background="@drawable/segregacja_bio"
        />
    <ImageButton
        android:id="@+id/buttonZmieszane"
        android:layout_width="380dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/buttonBio"
        android:background="@drawable/segregacja_ogolne"
        />

        <ImageButton
            android:id="@+id/buttonniewiadoma"
            android:layout_width="380dp"
            android:layout_height="180dp"
            android:layout_below="@id/buttonZmieszane"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat"
            android:text="A co z resztÄ…?"
            android:textAllCaps="true"
            android:textSize="40dp"
            android:textStyle="bold"
            android:background="@drawable/segregacja_reszta"/>

    </RelativeLayout>
</ScrollView>